<h1>Categories</h1>
<%= will_paginate @categories %>
<table>
  <thead>
  <tr>
    <th>name</th>
  </tr>
  </thead>
  <tbody>
  <% @categories.each do |category| %>
    <tr>
      <td>
        <%= link_to category.name, category_path(category) %>
        <p><%= pluralize(category.articles.count, "article") %></p>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<p>
  <%= link_to 'Create new article', new_article_path %>
</p>